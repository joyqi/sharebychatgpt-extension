{
  "name": "share-by-chatgpt",
  "displayName": "Share by ChatGPT",
  "version": "0.0.1",
  "description": "A browser extension summarize web pages with ChatGPT for easy sharing on social media.",
  "author": "joyqi",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "build-chrome": "plasmo build --target=chrome-mv3",
    "build-firefox": "plasmo build --target=firefox-mv2",
    "package-chrome": "plasmo package --target=chrome-mv3",
    "package-firefox": "plasmo package --target=firefox-mv2"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.2",
    "@plasmohq/messaging": "^0.1.6",
    "eventsource-parser": "^0.1.0",
    "html-to-text": "^9.0.4",
    "plasmo": "0.67.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sentence-splitter": "^4.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.3",
    "@types/chrome": "0.0.210",
    "@types/firefox-webext-browser": "^111.0.0",
    "@types/html-to-text": "^9.0.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.14",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  },
  "manifest": {
    "default_locale": "en",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
  }
}
